#!/usr/bin/env python3

import sys, os
sys.path.append(os.path.abspath(os.path.join(os.path.dirname(__file__), os.pardir)))

import gi
gi.require_version("Gtk", "3.0")
from gi.repository import Gtk
from ui import RoboMainWindow
from ui import RoboRequestor

requestor = RoboRequestor()
win = RoboMainWindow(requestor)
win.connect("destroy", Gtk.main_quit)
win.show_all()
Gtk.main()
